<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <ImageView
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginLeft="310dp"
        android:id="@+id/wifi_state5"
        app:srcCompat="@drawable/wifi04" />

    <TextView
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="步进电机电源"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"/>
    <ImageView
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginLeft="100dp"
        android:id="@+id/MotorPower5"
        />
    <TextView
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="故障调速电源"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"/>
    <ImageView
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginLeft="240dp"
        android:id="@+id/FaultPower5"
        />

    <ImageView
        android:id="@+id/MotorPhaseAState"
        android:layout_columnSpan="3"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="40dp" />
    <TextView
        android:text="步进电机A相："
        android:layout_columnSpan="3"
        android:layout_column="0"
        android:layout_row="1"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:text="步进电机B相："
        android:layout_columnSpan="3"
        android:layout_column="0"
        android:layout_row="2"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:layout_columnSpan="3"
        android:layout_column="0"
        android:layout_row="2"
        android:id="@+id/MotorPhaseBState"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="40dp" />
    <TextView
        android:text="步进电机C相："
        android:layout_columnSpan="3"
        android:layout_column="0"
        android:layout_row="3"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:layout_columnSpan="3"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_marginLeft="180dp"
        android:id="@+id/MotorPhaseCState"
        android:layout_marginTop="40dp" />


    <Button
        android:layout_width="120dp"
        android:layout_marginTop="30dp"
        android:textSize="22sp"
        android:text="开 / 关"
        android:id="@+id/MotorPhaseAswitch"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnSpan="2" />

    <Button
        android:layout_marginLeft="0dp"
        android:layout_width="120dp"
        android:layout_marginTop="30dp"
        android:textSize="22sp"
        android:text="开 / 关"
        android:id="@+id/MotorPhaseBswitch"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_columnSpan="2"/>
    <Button
        android:layout_marginLeft="0dp"
        android:layout_width="120dp"
        android:layout_marginTop="30dp"
        android:textSize="22sp"
        android:text="开 / 关"
        android:layout_row="3"
        android:layout_column="2"
        android:id="@+id/MotorPhaseCswitch"
        android:layout_columnSpan="2"
        android:elevation="22dp" />
    <Button
        android:layout_marginLeft="20dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="启 / 停"

        android:id="@+id/MotorStartStop"
        android:textSize="22sp"
        android:textColor="@color/black"/>

    <Button
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginLeft="280dp"
        android:text=" 返 回 "
        android:id="@+id/SettingReturn4"
        android:textSize="22sp"
        android:textColor="@color/black"/>

    <Button
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginLeft="150dp"
        android:text="正 / 反"
        android:id="@+id/Motorreversal"
        android:textSize="22sp"
        android:textColor="@color/black"/>


</GridLayout>