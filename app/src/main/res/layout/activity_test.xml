<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorPrimary">
    <ImageView
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_marginLeft="310dp"
        android:id="@+id/wifi_state"
        app:srcCompat="@drawable/wifi04" />


    <TextView
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="步进电机电源"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"/>
    <ImageView
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginLeft="100dp"
        android:id="@+id/MotorPower1"
        />
    <TextView
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="故障调速电源"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"/>
    <ImageView
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginLeft="240dp"
        android:id="@+id/FaultPower1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:text="当前转速:"
        android:id="@+id/CurSpeed"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:paddingBottom="2mm"/>
    <TextView
        android:layout_width="10mm"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_column="1"
        android:layout_row="1"
        android:id="@+id/CurSpeedShower"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:text="当前档位:"
        android:id="@+id/CurGear"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:paddingBottom="2mm"/>
    <TextView
        android:layout_width="10mm"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_column="1"
        android:layout_row="2"
        android:id="@+id/CurGearShower"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:text="档位速度:"
        android:id="@+id/GearSpeed"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:paddingBottom="2mm"/>
    <TextView
        android:layout_width="10mm"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_column="1"
        android:layout_row="3"
        android:id="@+id/GearSpeedShower"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:text="当前步数:"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:paddingBottom="2mm"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:text="上升速率:"
        android:id="@+id/RiseRate"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:paddingBottom="2mm"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:text="最大转速:"
        android:id="@+id/MaxSpeed"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:paddingBottom="2mm"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="0"
        android:text="允许档位:"
        android:id="@+id/PermitGear"
        android:textSize="20sp"
        android:textColor="@color/black"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_column="0"
        android:text="飞车转速:"
        android:id="@+id/RunawaySpeed"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:paddingBottom="2mm"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="9"
        android:layout_column="0"
        android:text="最大步数:"
        android:id="@+id/MaxStep"
        android:textSize="20sp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:text="故障信息:"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="40dp"
        android:layout_row="1"
        android:layout_column="2"
        android:textSize="22sp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_marginLeft="100dp"
        android:id="@+id/FaultMsg" />


    <TextView
        android:layout_width="10mm"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_column="1"
        android:layout_row="5"
        android:id="@+id/RiseRateShower" />

    <TextView
        android:layout_width="10mm"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_column="1"
        android:layout_row="6"
        android:id="@+id/MaxSpeedShower1" />
    <TextView
        android:layout_width="10mm"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_column="1"
        android:layout_row="7"
        android:id="@+id/PermitGearShower1" />
    <TextView
        android:layout_width="10mm"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_column="1"
        android:layout_row="8"
        android:id="@+id/RunawaySpeedShower1" />
    <TextView
        android:layout_width="10mm"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_column="1"
        android:layout_row="9"
        android:id="@+id/MaxStepShower" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_marginRight="20dp"
        android:layout_column="2"
        android:layout_rowSpan="6"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_marginLeft="10dp"
        android:layout_row="2"
        android:id="@+id/FaultMsgShower"
        android:lines="4"
        android:ellipsize="end"/>

    <Button
        android:id="@+id/SetParameter"
        android:layout_column="2"
        android:layout_row="8"
        android:gravity="fill"
        android:background="@color/colorAccent"
        android:text="参数设置"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:layout_marginTop="1mm"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="10mm"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_column="1"
        android:layout_row="4"
        android:id="@+id/CurStepShower"/>

</GridLayout>
